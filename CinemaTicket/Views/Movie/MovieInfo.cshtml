<!--
    作者：longlou.d@foxmail.com
    时间：2017-12-09
    描述：电影信息头
-->
<div class="movieInfoHead">
    
        @foreach (var item in Model)
        {
            <img id="poster" src="~/@Html.DisplayFor(modelItem => item.poster)" width="220" height="310" />
            <table id="headInfo">
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.type)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.area)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.releaseTime)</td>
                </tr>
            </table>
        }
            
    <a href="#" id="selectCinema">
        选择影院
    </a>
</div>

<!--
            作者：longlou.d@foxmail.com
            时间：2017-12-09
            描述：电影信息主体
        -->
<div class="infoContent">
    @Html.Raw(@ViewBag.MovieInfo)
</div>

    <!--
        作者：longlou.d@foxmail.com
        时间：2017-12-09
        描述：推荐电影
    -->
    <div class="recommend">
        <h2 class="headline-1 custom-title ">
            <span class="headline-content">相关电影</span>
        </h2>

        @foreach (var item in ViewBag.Recommend)
        {
            <div class="movieItem">
                <a href="/Movie/MovieInfo?id=@item.id&name=@item.name&type=@item.type">
                    <img src="~/@item.poster" width="120" height="170" />
                    <br />
                    <span>@item.name</span>
                </a>
            </div>
        }

    </div>
